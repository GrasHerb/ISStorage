<Window x:Class="IS_Storage.Log_In.registrRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IS_Storage.workViews"
        mc:Ignorable="d"
        Title="Запрос регистрации" Height="340" Width="340" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Viewbox>
    <StackPanel Width="340">
        <Label  Content="Доступ*"/>
        <ComboBox x:Name="cmbRole" Margin="10,0" BorderBrush="{x:Null}" Background="{x:Null}" SelectedIndex="0">
            <ComboBoxItem Content="Сотрудник"/>
            <ComboBoxItem Content="Менеджер"/>
            <ComboBoxItem Content="Администратор"/>
        </ComboBox>
        <Label  Content="Логин*"/>
        <TextBox Margin="10,0" Width="auto" x:Name="regLog"/>
        <Label  Content="Фамилия*"/>
        <TextBox Margin="10,0" Width="auto" x:Name="regSecName"/>
        <Label  Content="Имя*"/>
        <TextBox Margin="10,0" Width="auto" x:Name="regFstName"/>
        <Label  Content="Отчество*"/>
        <TextBox Margin="10,0" Width="auto" x:Name="regThrName"/>
        <Button Style="{StaticResource Button1}" Content="Отправить запрос" Margin="10" Click="Button_Click"/>
    </StackPanel>
    </Viewbox>
</Window>
