<Page x:Class="IS_Storage.Log_In.pass_recoverPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IS_Storage.Log_In"
      mc:Ignorable="d"
      Title="pass_recoverPage" Width="400" Height="440">
    <Viewbox>
    <StackPanel VerticalAlignment="Center">
        <Label Content="Укажите логин/почту пользователя" x:Name="mainLbl"/>
        <TextBox x:Name="maintxt" Width="auto" />
        <Button Content="Восстановить" Margin="10,0,10,0" x:Name="recoverBtn" Click="recoverBtn_Click" Style="{StaticResource Button1}"/>
        <Button FontSize="10" Content="Отмена" HorizontalAlignment="Center" Margin="5" x:Name="cancelBtn" Click="cancelBtn_Click" Style="{StaticResource Button2}" Width="50"/>
    </StackPanel>
    </Viewbox>
</Page>
